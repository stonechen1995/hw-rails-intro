<h2>All Movies</h2>

<%#  Part 2: Start here... %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <!--<th>Movie Title</th>-->
      <th class=<%= @class_title %>><a href='/movies/?sort=title' id='title_header'>Movie Titles</a></th>
      <!--<th class>Movie Title</th>-->
      <th>Rating</th>
      <!--<th>Release Date</th>-->
      <th class=<%= @class_date %>><a href='/movies/?sort=release_date' id='release_date_header'>Release Date</a></th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>